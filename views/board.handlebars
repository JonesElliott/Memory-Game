<section>
    <link rel="stylesheet" href="/assets/css/board.css" type="text/css" />
    <script src="/assets/js/board.js"></script>
    <div class="gameboard-container">
        <div></div>
    </div>


    <div id="div-main">

        <div id="div-header">
            <div class="header-title">
                <h1>Memory Game</h1>
            </div>

            <div class="header-score">
                <h2>Category: <span id="category">Animals</span> </h2>
                <h2>Score: <span id="score">0</span> <span id="total">/8</span></h2>

            </div>

        </div>



        <div class="grid-container">
            {{!-- {{{ board }}} --}}
            <div>
                <div class="Cards_List">
                    {{#each cards}}
                    <button class="grid-item">
                        <img class="img" src="{{this}}" alt="card">
                    </button>

                    {{/each}}
                </div>

            </div>


            {{!--  --}}
        </div>

    </div>
</section>